<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        >
        <TextView
            android:id="@+id/login_football_HEADER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:textSize="@dimen/font_heading_40"
            android:textColor="@color/colorAccent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geek"
            android:textSize="@dimen/font_heading_40"
            android:textColor="@color/colorSecondary"
            android:layout_toRightOf="@id/login_football_HEADER"
            android:textStyle="bold"/>


    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:layout_above="@id/login_email_edit_text"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/login_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_password_text_view"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:layout_marginBottom="@dimen/ternary_base_style_16"
        android:textColor="@color/colorAccent"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/login_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:layout_above="@id/login_password_edit_text"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/login_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:layout_marginBottom="@dimen/ternary_base_style_16"
        android:layout_above="@id/login_forgot_password_text_view"
        android:textColor="@color/colorAccent"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/login_forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_login_button"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/ternary_base_style_16"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:text="Forgot Password?"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="@dimen/base_style_36"
        android:layout_marginRight="@dimen/base_style_36"
        android:background="@color/colorSecondary"
        android:text="Log In"
        android:textSize="18dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/login_forgot_password_text_view" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/secondary_base_style_24"
            android:text="New User? "
            android:textColor="@color/colorAccent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/login_create_new_account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/secondary_base_style_24"
            android:text="Create new Account"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:visibility="invisible" />


</RelativeLayout>